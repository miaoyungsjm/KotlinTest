<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tosmart.mypackageinstaller.UninstallModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/uninstall_tv_app_name_height"
            android:background="@color/uninstall_title_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_uninstall_app_icon"
            android:layout_width="@dimen/uninstall_iv_app_icon_width"
            android:layout_height="@dimen/uninstall_tv_app_name_height"
            android:layout_marginEnd="@dimen/margin_small"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_uninstall_app_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_uninstall_app_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/uninstall_tv_app_name_height"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_little"
            app:layout_constraintLeft_toRightOf="@+id/iv_uninstall_app_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Final Tifa" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_uninstall_cancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_uninstall_app_name" />

        <Button
            android:id="@+id/btn_uninstall_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/uninstall_btn_height"
            android:background="@drawable/button_bg_selector"
            android:text="@string/STR_CANCEL"
            android:textColor="@drawable/button_text_color_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_uninstall_confirm" />

        <Button
            android:id="@+id/btn_uninstall_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/uninstall_btn_height"
            android:background="@drawable/button_bg_selector"
            android:text="@string/STR_CONFIRM"
            android:textColor="@drawable/button_text_color_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_uninstall_cancel"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>